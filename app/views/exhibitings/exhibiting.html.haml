.contents__outline
  = render "shared/side"
  .exhibiting__contents
    .exhibiting__contents__head
      出品した商品
    .exhibiting__contents__tags
      = link_to user_exhibiting_path(current_user.id), class: "exhibiting__contents__tags__exhibiting" do
        出品中
      = link_to user_trading_path(current_user.id), class: "exhibiting__contents__tags__trading" do
        取引中
      = link_to user_sold_path(current_user.id), class: "exhibiting__contents__tags__sold" do
        売却済み
    - if @products == nil
      .sold__contents__content
        .sold__contents__content__mercari
          = image_tag("https://www.mercari.com/jp/assets/img/common/common/logo-gray-icon.svg?716030" , class:"contents__outline__mypage__down__left__contents__image", widht:"78px",height:"85px")
        .sold__contents__content__text
          出品中の商品がありません
    - else
      - @products.each do |product|
        = render partial: "selected", locals: { product: product }