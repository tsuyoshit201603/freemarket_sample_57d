.deviseMain
  .deviseLogin
    .deviseLogin__top
      アカウントをお持ちでない方はこちら
    = link_to signups_path do
      .deviseLogin__signUp
        新規会員登録
  .deviseAuth
    = link_to user_facebook_omniauth_authorize_path, method: :post do
      .deviseAuth__login.deviseAuth__login--facebook
        = fa_icon "facebook-square 2x"
        Facebookでログイン
    = link_to user_google_oauth2_omniauth_authorize_path, method: :post do
      .deviseAuth__login.deviseAuth__login--google
        = image_tag("https://img.icons8.com/color/48/000000/google-logo.png", class:"googleIcon" )
        Googleでログイン
  .deviseForm
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .deviseForm__form.devise__form--email
        = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス", class:""
      .deviseForm__form.devise__form--password
        = f.password_field :password, autocomplete: "current-password",placeholder: "パスワード"
      .deviseForm__recaptcha
        - if ENV["RECAPTCHA_SITE_KEY"].present?
          = recaptcha_tags
      .deviseForm__submit
        = f.submit "ログイン"
      = link_to "パスワードをお忘れの方", new_password_path(resource_name), class: "deviseForm__forget"